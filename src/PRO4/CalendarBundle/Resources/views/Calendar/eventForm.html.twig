{% extends 'PRO4CalendarBundle:Calendar:index.html.twig' %}

{% block form %}
	<form method="post" id="newEvent">

				{{ form_row(form.title) }}
				{{ form_row(form.description) }}
				{{ form_row(form.departmentId) }}
					<p class="sideinfo">Leave this option blank if the to-do list should be visible for the whole project</p>
				{{ form_row(form.date) }}
				{{ form_row(form.allDay) }}
				{{ form_row(form.time) }}
					<p class="sideinfo">Leave this option blank if the event lasts for the entire day</p>
			{{ form_widget(form) }}
	</form>

{% endblock %}
