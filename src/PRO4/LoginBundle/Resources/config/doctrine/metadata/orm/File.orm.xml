<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="File" table="file">
    <id name="fileId" type="integer" column="file_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="100" nullable="false"/>
    <field name="path" type="string" column="path" length="100" nullable="false"/>
    <field name="description" type="text" column="description" nullable="true"/>
    <many-to-one field="department" target-entity="Department">
      <join-columns>
        <join-column name="department_id" referenced-column-name="department_id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="project" target-entity="Project">
      <join-columns>
        <join-column name="project_id" referenced-column-name="project_id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
