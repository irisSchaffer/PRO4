<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Milestone" table="milestone">
    <id name="milestoneId" type="integer" column="milestone_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="40" nullable="false"/>
    <field name="startDate" type="date" column="start_date" nullable="false"/>
    <field name="endDate" type="date" column="end_date" nullable="false"/>
    <field name="color" type="string" column="color" length="6" nullable="false"/>
    <many-to-one field="milestonePlan" target-entity="MilestonePlan">
      <join-columns>
        <join-column name="milestone_plan_id" referenced-column-name="milestone_plan_id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
