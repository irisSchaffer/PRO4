<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Event" table="event">
    <id name="eventId" type="integer" column="event_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="title" type="string" column="title" length="80" nullable="false"/>
    <field name="date" type="date" column="date" nullable="false"/>
    <field name="time" type="time" column="time" nullable="true"/>
    <field name="description" type="text" column="description" nullable="true"/>
    <many-to-one field="project" target-entity="Project">
      <join-columns>
        <join-column name="project_id" referenced-column-name="project_id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="department" target-entity="Department">
      <join-columns>
        <join-column name="department_id" referenced-column-name="department_id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
