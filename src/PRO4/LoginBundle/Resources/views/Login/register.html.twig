{% extends 'PRO4LoginBundle:Login:index.html.twig' %}

{% set title = 'Register' %}

{% block header %}
	<a href="{{ path('login') }}">Login</a>
{% endblock %}

{% block form %}
	<fieldset>
		<legend>{{ title|capitalize }}</legend>
		<div class="error">
			{{ form_errors(form) }}
		</div>
		
		<ul>
			<li> {{ form_row(form.email) }} </li>
			<li> {{ form_row(form.password) }}</li>
			<li>
				<button type="submit" name="{{ title }}"> {{ title|capitalize }} </button>
			</li>
		</ul>
		
		{{ form_widget(form) }}
	</fieldset>
{% endblock %}