{% extends 'PRO4LoginBundle:Login:index.html.twig' %}

{% set action = path('login_check') %}

{% block header %}
	<a href="{{ path('register') }}">Register</a>
{% endblock %}

{% block onload %} onload="openSignup()"{% endblock %}

{% block form %}
		<div class='radioWrap'>
			<div id='loginWrap'class='selectedMode'>
				<a href="{{ path('login') }}">Login</a>
			</div>
			<div id='registerWrap'>
				<a href="{{ path('register') }}">Register</a>
			</div>
		</div>

	
		<div class='inputsWrap'>
				<label for="email">Email</label>
				<input type="text" id="email" name="email" value="{{ last_email }}" />
				<label for="password">Password</label>
				<input type="password" id="password" name="password" />
		</div>
{% endblock %}

{% block error %}
		{% if error  %}
		<ul class="error">
			<li>{{ error }}</li>
		</ul>
		{% endif %}
{% endblock %}