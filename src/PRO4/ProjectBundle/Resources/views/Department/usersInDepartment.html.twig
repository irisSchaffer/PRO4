{% extends '::base.html.twig' %}

{% block content %}
	<h1>Users in {{ department.name }}</h1>
	<div id="users">
	
	{% if isAdmin is not defined or isAdmin %}
		<form method="post">
			<fieldset>
				<legend>Add new User to Department</legend>
				<ul>
					<li>{{ form_row(form.user) }}</li>
				</ul>
				{{ form_widget(form) }}
			
				<button type="submit">Add User</button>
			</fieldset>
		</form>
	{% endif %}
	
	<h3>Users</h3>
	
	{% if users is empty %}
		No Users added to this department yet. Please add users or ask your administrator to do so.
	{% endif %}
	
	{% for user in users %}
		<div>
{{ user.eMail }}
			
			{% if user.isOwner %}
				| Project Owner
			{% elseif user.isOperator %}
				| Project Operator
			{% elseif user.isAdmin %}
				| Admin
			{% endif %} 
			
			{% if is_granted("EDIT", department) %}
	        	{% if not user.isOperator %}
	        		{% if not user.isAdmin or is_granted("OPERATOR", department) and user.isAdmin %}
	        			| <a href="{{ path("remove_user_from_department", {"projectId" : project.projectId, "departmentId" : department.departmentId, "userId" : user.userId }) }}">Remove</a>        			
		        	{% endif %}
		        	
		        	{% if not user.isAdmin %}
		        		| <a href="{{ path("remove_user_from_department", {"projectId" : project.projectId, "departmentId" : department.departmentId, "userId" : user.userId }) }}">Grant Admin</a>
		        	{% endif %}  
		        			
		        	{% if is_granted("OPERATOR", department) and user.isAdmin %}
		        		| <a href="{{ path("remove_user_from_department", {"projectId" : project.projectId, "departmentId" : department.departmentId, "userId" : user.userId }) }}">Revoke Admin</a>
		        	{% endif %}
	        	{% endif %}
			{% endif %}
			
		<div>
	{% endfor %}
	</div>
		
{% endblock %}