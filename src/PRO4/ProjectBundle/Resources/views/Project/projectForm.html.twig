{% extends '::base.html.twig' %}

{% block content %}
	<h1>Add Project</h1>
	
	<form method="post">
		<fieldset>
			<legend>Project Details</legend>
			<ul>
				<li>{{ form_row(form.name) }}</li>
				
				<li>{{ form_row(form.description) }}</li>
			</ul>
		</fieldset>
		{{ form_widget(form) }}
		<button type="submit">Save Project</button> <button type="reset">Clear fields</button>
	</form>
		
{% endblock %}