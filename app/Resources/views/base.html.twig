<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	{% block stylesheets %}
		<link href="{{ asset('bundles/pro4/colorpicker/css/colorpicker.css') }}" type="text/css" rel="stylesheet" />
		<link href="{{ asset('bundles/pro4/js/jquery-ui-1.10.3/themes/custom-theme/jquery-ui.css') }}" rel="stylesheet" type="text/css" />
		<link href="{{ asset('bundles/pro4/css/main.css') }}" type="text/css" rel="stylesheet" />
	{% endblock %}
	{% block js %}
		<script src="{{ asset('bundles/pro4/js/jquery-1.9.1.js') }}"></script>
		<script src="{{ asset('bundles/pro4/js/jquery-ui-1.10.3/ui/jquery-ui.js') }}"></script>
		<script src="{{ asset('bundles/pro4/colorpicker/js/colorpicker.js') }}"></script>
		<script src="{{ asset('bundles/pro4/js/script.js') }}"></script>
	{% endblock %}
    <title>PRO4</title>
</head>

<body>
	{% if status is defined %}
		{% for key, msgs in status %}
			<ul class="{{ key }}">
			{% for msg in msgs %}
				<li>{{ msg }}</li>
			{% endfor %}
			</ul>
		{% endfor %}
	{% endif %}
	<div id="wrap">
		{% block header %}{% endblock %}
		<!--<header>
			<a href="{{ path('logout') }}">Logout</a>
		</header>-->
		{% block nav %}
		<nav id="mainMenu">
			<ul>
				<li class="hasSub" id="projectName">
					<a href="#">{{ project.name }}<span class="arrow">&#9660;</span></a>
					<ul>
						<li>
							<a href="{{ path("project_detail", {"id": project.projectId}) }}">Settings</a>
						</li>
						<li>
							<a href="{{ path("department_overview", {"projectId": project.projectId}) }}">Departments</a>
						</li>
						<li>
							<a href="{{ path("users_in_project", {"id": project.projectId}) }}">Users</a>
						</li>
						<li>
							<a href="{{ path("project") }}">Change project</a>
						</li>
					</ul>
				</li>
				<li>
					<a href="{{ path("to_do_lists", {"projectId": project.projectId}) }}">To-Do Lists</a>
				</li>
				<li>
					<a href="{{ path("calendar", {"projectId": project.projectId}) }}">Calendar</a>
				</li>
				<li>
					<a href="{{ path("milestone_plan", {"id": project.projectId}) }}">Milestones</a>
				</li>
				<li>
					<a href="{{ path("files", {"projectId": project.projectId}) }}">Files</a>
				</li>
				<a id="logout" href="{{ path('logout') }}">Logout</a>
			</ul>

		</nav>
		{% endblock %}
		
		<div id="content">
			{% block content %} {% endblock %}
		</div>
		<footer>
			{% block footer %} {% endblock %}
			<p>
				&copy; Copyright by Iris Schaffer &amp; Paul Stangl - <a href="#">Contact</a> - <a href="#">Impressum</a>
			</p>
		</footer>
    </div>
</body>
</html>